<div class="container">
<div class="page-header">
    <h1>Actors</h1>
</div>
<a href="http://localhost:3000/actors/new" class="btn btn-primary">Add a New Actor</a>

<table class="table table-hover">
<thead>
  <tr>
    <th>Director</th>
    <th>Name</th>
    <th>Birthday</th>
    <th>Bio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

</thead>  <% @list_of_actors.each do |actor| %>
   <tr>
    <td>
      <img src="<%= actor.image_url %>" width="80">
    </td>
    <td>
      <%= actor.name %>
    </td>
    <td>
      <%= actor.dob %>
    </td>
    <td>
      <%= actor.bio %>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>" class="btn btn-primary"><i class="fa fa-search-plus"></i></a>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>/edit" class="btn btn-warning"><i class="fa fa-edit"></i></a>
    </td>
    <td>
      <a href="http://localhost:3000/actors/delete_actor/<%= actor.id %>" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
    </td>
    </tr>
  </div>
  <% end %>
</table>