<h1>Actors</h1>

<a href="http://localhost:3000/directors">Directors</a>
<a href="http://localhost:3000/movies">Movies</a>
<a href="http://localhost:3000/actors">Actors</a>

<a href="http://localhost:3000/actors/new">Add a New Actor</a>

<table>
  <tr>
    <th>Actor</th>
    <th>Name</th>
  </tr>
  <% @list_of_actors.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image_url %>" width="80">
    </td>
    <td>
      <%= actor.name %>
    </td>
     <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>">Details</a>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/actors/delete_actor/<%= actor.id %>">Delete</a>
    </td>    
    </tr>
  <% end %>
</table>