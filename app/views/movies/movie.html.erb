<div class="container">
<div class="page-header">
    <h1>Movies</h1>
</div>
<a href="http://localhost:3000/movies/new" class="btn btn-primary">Add a New Movie</a>

<table class="table table-hover">
<thead>
  <tr>
    <th>Movie</th>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead> 
  <% @movies.each do |film| %>
  <tr>
    <td>
      <img src="<%= film.image_url %>" width="80">
    </td>
    <td>
      <%= film.title %>
    </td>
    <td>
      <%= film.year %>
    </td>    
    <td>
      <%= film.duration %>
    </td>
    <td>
      <%= film.description %>
    </td>
    <td>
      <a href="http://localhost:3000/movies/<%= film.id %>" class="btn btn-primary"><i class="fa fa-search-plus"></i></a>
    </td>
    <td>
      <a href="http://localhost:3000/movies/<%= film.id %>/edit" class="btn btn-warning"><i class="fa fa-edit"></i></a>
    </td>
    <td>
      <a href="http://localhost:3000/movies/delete_movie/<%= film.id %>" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
    </td>
    </tr>
  <% end %>
</table>