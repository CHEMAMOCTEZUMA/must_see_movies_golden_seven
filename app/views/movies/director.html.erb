<div class="container">
<div class="page-header">
    <h1>Directors</h1>
</div>
<a href="http://localhost:3000/directors/new" class="btn btn-primary">Add a New Director</a>

<table class="table table-hover">
<thead>
  <tr>
    <th>Director</th>
    <th>Name</th>
    <th>Birthday</th>
    <th>Bio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>  

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <img src="<%= director.image_url %>" width="80">
    </td>
    <td>
      <%= director.name %>
    </td>
    <td>
      <%= director.dob %>
    </td>
    <td>
      <%= director.bio %>
    </td>
    <td>
      <a href="http://localhost:3000/directors/<%= director.id %>" class="btn btn-primary"><i class="fa fa-search-plus"></i></a>
    </td>
    <td>
      <a href="http://localhost:3000/directors/<%= director.id %>/edit" class="btn btn-warning"><i class="fa fa-edit"></i></a>
    </td>
    <td>
      <a href="http://localhost:3000/directors/delete_director/<%= director.id %>" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
    </td>
    </tr>
  <% end %>
</table>