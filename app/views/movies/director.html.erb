<table>
  <tr>
    <th>Director</th>
    <th>Name</th>
  </tr>
  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <img src="<%= director.image_url %>" width="80">
    </td>
    <td>
      <%= director.name %>
    </td>
     <td>
      <a href="http://localhost:3000/directors/<%= director.id %>">Details</a>
    </td>
    <td>
      <a href="http://localhost:3000/directors/<%= director.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/directors/delete_director/<%= director.id %>">Delete</a>
    </td>
    </tr>
  <% end %>
</table>